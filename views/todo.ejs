<!DOCTYPE html>

<html>

    <head>
        <title>Todo List APP tests</title>
        <style>
            a {
                text-decoration: none;
                color: black;
            }

        </style>
    </head>

    <body style="background-color:DodgerBlue;">
        <h1 style="background-color:DodgerBlue;"> Learn AWS Cloud / DevOps with shashi swift </h1>
        <ul>
            <% todolist.forEach(function(todo, index) { %>
            <li>
                <a href="/todo/delete/<%= index %>">✘</a>
                <a href="/todo/<%= index %>">✎</a>
                <%- todo %>
            </li>
            <% }); %>
        </ul>

        <form action="/todo/add/" method="post">
            <p>
                <label for="newtodo">please type message here </label>
                <input type="text" name="newtodo" id="newtodo" autofocus />
                <input type="submit" value="send" />
            </p>
        </form>
    </body>

</html>
